<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid background color -->
    <solid android:color="#36F43F" />

    <!-- Corners radius -->
    <corners android:radius="10dp" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- Padding -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />

</shape>
